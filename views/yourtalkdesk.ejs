    <div class="container">
      <h1 class="mt-3" style="text-align: center;color: azure;">Recent talks</h1>
      <div class="row mt-3">
        <% forum.forEach(f => { %>
        <div class="col-md-12 mb-4">
          <div class="card">
            <div class="card-body">
              <h2 class="card-title"><%= f.content %></h2>
              <div id="nm">
                <h6 class="card-subtitle text-muted">by <%= f.name %></h6>
              </div>
              <p class="card-text"><small class="text-muted">Created at <%= f.date %></small></p>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
