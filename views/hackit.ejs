
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.2/css/bootstrap.min.css">
  <style>
    ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
    }

    li {
      border-bottom: 1px solid #ccc;
      margin-bottom: 20px;
      padding-bottom: 20px;
    }

    h2 {
      margin-top: 0;
    }

    small {
      color: #999;
      font-style: italic;
    }
  </style>

  <div class="container">
    <h1 class="mt-3">Recent Questions</h1>

    <ul class="mt-3">
      <% question.forEach(q => { %>
      <li>
        <a href="/user/hackit/<%= q._id %>" class="text-decoration-none">
          <h2 class="text-primary"><%= q.data.question %></h2>
          <small>Created at <%= q.date %></small>
        </a>
      </li>
      <% }) %>
    </ul>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.2/js/bootstrap.bundle.min.js"></script>
