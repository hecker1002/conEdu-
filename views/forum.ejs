<style>
  .title {
    text-align: center;
  }

  .error-message {
    background: #6ccb4d;
    color: white;
    border-radius: 10px;
    padding: 10px;
    width:58.5vw;
  }

  .mew-form,
  .loading {
    width: 50%;
    margin: 0 auto;
  }

  .loading {
    text-align: center;
  }

  .mews {
    width: 80%;
    margin: 0 auto;
  }

  .mews > div {
    background: hsl(0, 0%, 95%);
    padding: 12px;
    border-radius: 4px;
  }

  .mews > div > h3 {
    word-wrap: break-word;
  }

  .mews > div > p {
    word-wrap: break-word;
  }

  .mews > div:not(:last-child) {
    margin-bottom: 8px;
  }

  .button-container {
    display: flex;
    justify-content: center;
    margin: 1em;
  }
</style>
<header>
  <h1 class="title">MyEdu` &#9997;</h1>
</header>
<main>
  <form action="/user/forum" method="POST">
    <div class="error-message"></div>
    <label for="name">Your Name </label>
    <input class="u-full-width" type="text" id="name" name="name" style="width:120vh"/>
    <label for="content">What You wanna Post ? </label>
    <textarea
      class="u-full-width"
      type="text"
      id="content"
      name="content"
      style="width:120vh"
    ></textarea>
    <button class="button-primary">Post It !</button>
  </form>
  <div class="mews"></div>
  <div class="button-container">
    <p id="loadMore">Loading...</p>
  </div>
  <div class="loading" >
    <img src="/Loading.gif" alt="" />
  </div>
</main>
<script src="./forum.js"></script>
